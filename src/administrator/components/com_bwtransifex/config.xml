              label="JCONFIG_PERMISSIONS_LABEL"
              description="COM_BWTRANSIFEX_CONFIG_PERMISSIONS_DESC">
        <field name="rules"
               type="rules"
               component="com_bwtransifex"
               filter="rules"
               validate="rules"
               label="JCONFIG_PERMISSIONS_LABEL"
               section="component"/>
