               type="radio"
               layout="joomla.form.field.radio.switcher"
               default="1"
               label="COM_BWTRANSIFEX_CONFIG_SHOW_BOLDT_LINK"
               description="COM_BWTRANSIFEX_CONFIG_SHOW_BOLDT_LINK_NOTE"
